{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link href="https://fonts.googleapis.com/css?family=Press+Start+2P" rel="stylesheet">
    <link rel="stylesheet" href="assets/css/play.css">
{% endblock %}

            {% block header %}
                <h4>A vous de jouer!</h4>
            {% endblock %}

 {% block content %}
     <p class="Pseudo">Pseudo : {{ pseudo }}</p>
     <p class="Score">Score : {{ score }} </p>

     <p class="question">Le personnage à :</p>
     <div class="container">
         <form action="/elimination" method="POST">
             <div class="row ">
                 <div class="input-group col-lg-5 col-lg-6 offset-2 ">
                     <select class="custom-select" name="option" >
                         <option selected>....</option>
                         <option value="cheveuxBrun">t'il des cheveux brun?</option>
                         <option value="cheveuxBlond">t'il des cheveux blond?</option>
                         <option value="lunette">t'il des lunettes?</option>
                         <option value="barbe">t'il une barbe?</option>
                         <option value="ral">t'il du rouge à lèvre?</option>
                         <option value="chapeau">t'il un chapeau?</option>
                         <option value="genreFemme">est t'elle une femme?</option>
                         <option value="genreHomme">est t'il un homme?</option>
                     </select>
                 </div>
             </div>

             <div class="col-lg-1  offset-5">
                 <button name="button" value="question" class="valider btn btn-primary " type="submit">Valider</button>
             </div>
             <div>
                 <p>
                     {% for reponse in reponse %}
                         {{ reponse }} <br>
                     {% endfor %}
                 </p>
             </div>
         </form>
     </div>

     <form action="/elimination" method="POST">
         <div class="container">
             <div class=" plateau row ">


                 {% for char in listechar %}
                     {% for restant in restant %}
                         {% if restant == char.id_car %}
                             <div class="nopad text-center">
                                 <label class="image-checkbox">
                                     <img class="img-responsive" style="width: 120px;heigth: 120px;" src="{{ char.image }}" />
                                     <input type="checkbox" name="image[]" value="{{ char.id_car }}" />

                                 </label>
                             </div>
                         {% endif %}
                     {% endfor %}

                     {% for eliminer in eliminer %}
                         {% if eliminer == char.id_car %}

                             <div class="nopad text-center">
                                 <label style="background-color: rgba(255, 0, 0, 1);" class="image-checkbox">
                                     <img  class="img-responsive" style="width: 120px;heigth: 120px;" src="{{ char.image }}" />
                                     <input type="checkbox" name="image[]" value="{{ char.id_car }}" />

                                 </label>
                             </div>
                         {% endif %}
                     {% endfor %}
                 {% endfor %}


             </div>
         </div>

         <div class="container">
             <div class="bottomButton row">
                 <div class=" col-xl-4 col-md-4 col-sm-4 offset-1">

                     <button name="button"  value="eliminer" class="btn btn-danger" type="submit">Eliminer votre sélection</button>
                 </div>
                 <div class=" col-xl-4 col-md-4 col-sm-4 offset-2">
                     <button name="button" value="valider"  class="valider btn btn-primary " type="submit">Valider la bonne photo</button>
                 </div>
     </form>
     </div>
     </div>
 {% endblock %}
