{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link href="https://fonts.googleapis.com/css?family=Press+Start+2P" rel="stylesheet">
    <link rel="stylesheet" href="assets/css/play.css">
{% endblock %}

            {% block header %}
                <h4>A vous de jouer!</h4>
            {% endblock %}

 {% block content %}
     <p class="Pseudo">Pseudo : {{ pseudo }}</p>
     <p class="Score">{% if score %}Score : {{ score }} }}{% endif %}</p>

     <p class="question">Le personnage à :</p>
     <div class="container">
         <div class="row ">
             <div class="input-group col-lg-5 col-lg-6 offset-2 ">
                 <select class="custom-select" id=".." >
                     <option selected>....</option>
                     <option value="1">t'il des cheveux brun?</option>
                     <option value="2">t'il des cheveux blond?</option>
                     <option value="3">t'il des lunettes?</option>
                     <option value="4">t'il une barbe?</option>
                     <option value="5">t'il du rouge à lèvre?</option>
                     <option value="5">t'il un chapeau?</option>
                     <option value="6">est t'elle une femme?</option>
                     <option value="7">est t'il un homme?</option>
                 </select>
             </div>
         </div>
     </div>
     <div class="col-lg-1  offset-5">
         <button class="valider btn btn-primary " type="button">Valider</button>
     </div>

     <div class="container">
         <div class=" plateau row ">
             {% for items in 1..4 %}
                 {% for items in 1..8 %}
                     <div class="nopad text-center">
                         <label class="image-checkbox">
                             <img class="img-responsive" src="http://via.placeholder.com/120x120" />
                             <input type="checkbox" name="image[]" value="" />

                         </label>
                     </div>
                 {% endfor %}
             {% endfor %}
         </div>
     </div>

     <div class="container">
         <div class="bottomButton row">
             <div class=" col-xl-4 col-md-4 col-sm-4 offset-1">
                 <button class="btn btn-danger" type="button">Eliminer votre sélection</button>
             </div>
             <form class="form-inline " action="/fin" type="GET">
                 <div class=" col-xl-4 col-md-4 col-sm-4 offset-2">
                     <button class="valider btn btn-primary " type="submit">Valider la bonne photo</button>
                 </div>
             </form>
         </div>
     </div>
 {% endblock %}
