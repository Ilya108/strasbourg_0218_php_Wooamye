{% extends 'layout.html.twig' %}

{% block title %}
    Supprimer un set
{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/admin.css">
{% endblock %}



{% block content %}
    <header class="row ">
        <div class="container-fluid">

            <div class="col py-4 ">
                <h1 class="title">Supprimer un set</h1>
                <div class="row justify-content-center">
                    <form class="form-inline" method="POST" action="/changerAccueil">
                        <button type="submit" class="btn btn-lg btn-responsive">Changer l'accueil</button>
                    </form>

                </div>
            </div>
        </div>
    </header>

    <div class="row">
        <section class="col justify-content-center px-2 py-4 my-4 mx-2">
            <form action="/redirection" method="POST">
                <div class="row justify-content-center my-4" id="list">
                    <div class="offset-1 col-3">

                        <div class="dropdown">
                            <select class="btn btn-btn btn-responsive dropdown-toggle" name="selectAA" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                    <option class="dropdown-item" value="ajouter" selected="selected" type="button">Ajouter un Deck</option>
                                    <option class="dropdown-item" value="modifier" type="button">Modifier un Deck</option>
                                    <option class="dropdown-item" value="supprimer" type="button">Supprimer un Deck</option>
                                </div>
                            </select>

                        </div>
                    </div>
                    <div class="offset-1 col-3">
                        <button type="submit" class="btn btn- btn-responsive">Valider</button>
                    </div>
                </div>
            </form>

            <p> {{ erreur }} </p>
            <div class="row justify-content-center my-4">
                {% for deck in resultat %}
                    <div id="supprSet" class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                        <div class="thumbnail mb-3">
                            <p><span class="titre">{{ deck.decks }}</span></p>
                            <img name="{{ deck.decks }}" src="{{ deck.image }}" alt="{{ deck.decks }}" style="height: 140px; width: 140px" class="img-thumbnail">
                        </div>
                        <form action="/supprimer" method="POST">
                            <input type="hidden" name="supprDeck" value="{{ deck.decks }}">
                            <button type="submit" class="btn btn btn-responsive">Supprimer</button>
                        </form>
                    </div>
                {% endfor %}
            </div>
        </section>
    </div>







{% endblock %}
